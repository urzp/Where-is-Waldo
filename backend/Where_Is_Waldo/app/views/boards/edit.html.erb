<div class="main">
  <div class="panel">

    <%= form_for(@board) do |f| %>
    <div class="input_feeld">
    <%= f.label "Название" %><br>
    <%= f.text_field :title %>
    </div>
    <div class="input_feeld">
    <%= f.label "Уровень сложности" %><br>
    <%= f.text_field :hard_level %>
    </div>
    <div class="file"><br>
    <%= file_field "img",:image_name%>
    </div>
    <div class="input_feeld file_button">
    <%= f.label "Файл картинки" %><br>
    <%= f.text_field :image_name %>
    </div>

    <br>
    <%= f.fields_for @target do |t| %>
        <div class="input_feeld">
        <%= t.label "Координаты цели" %><br>
        </div>
        <div class="input_feeld">
        <%= t.label "начало x" %>
        <%= t.text_field :start_point_x %>
        <%= t.label "начало y" %>
        <%= t.text_field :start_point_y %>
        </div>
        <div class="input_feeld">
        <%= t.label "конец  x" %>&nbsp;&nbsp;
        <%= t.text_field :end_point_x %>
        <%= t.label "конец  y" %>&nbsp;&nbsp;
        <%= t.text_field :end_point_y %>
        </div>
    <% end %>

    <div class="save">
    <%= f.submit "Сохранить" %>

    </div>

  <% end %>

